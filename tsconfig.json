{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2018",
		"allowJs": true,
		"noEmit": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": false,
		"lib": ["DOM", "ES5", "ES6", "ES7", "ES2018"],
		"types": ["svelte", "node", "jest"]
	},
	"include": ["**/*.ts", "**/*.js", "**/*.svelte"]
}
